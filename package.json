{
  "name": "github-actions",
  "version": "1.5.10",
  "description": "Common GitHub Actions",
  "author": "Risk and Safety Solutions",
  "repository": "https://github.com/risk-and-safety/platform",
  "homepage": "https://riskandsafety.com",
  "license": "UNLICENSED",
  "private": true,
  "rss": {
    "deployTypes": [
      "GIT"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "bash ./compile.sh",
    "test": "node jest.setup.js && cross-env AWS_PROFILE=mgmt jest"
  },
  "dependencies": {
    "@actions/core": "1.2.5",
    "@actions/github": "2.2.0",
    "@kubernetes/client-node": "0.12.0",
    "@lerna/collect-updates": "3.20.0",
    "@lerna/conventional-commits": "3.22.0",
    "@lerna/package-graph": "3.18.5",
    "@lerna/project": "3.21.0",
    "@lerna/version": "3.22.1",
    "@octokit/rest": "17.9.2",
    "@rss/common-nodejs": "0.5.2",
    "@slack/web-api": "5.11.0",
    "aws-sdk": "2.638.0",
    "axios": "0.20.0",
    "conventional-changelog-angular": "5.0.11",
    "date-fns": "2.16.0",
    "fs-extra": "9.0.1",
    "lodash.capitalize": "4.2.1",
    "lodash.kebabcase": "4.1.1",
    "mime-types": "2.1.27",
    "p-retry": "4.2.0",
    "semver": "7.3.2",
    "slackify-markdown": "3.0.3",
    "tweetsodium": "0.0.5",
    "uuid": "8.3.0",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "@vercel/ncc": "0.24.0",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "24.9.0",
    "prettier": "1.19.1"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.(spec|integration).js"
    ]
  }
}
