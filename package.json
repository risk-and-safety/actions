{
  "name": "github-actions",
  "version": "3.12.6",
  "description": "Shared Risk and Safety GitHub Actions",
  "author": "Risk and Safety Solutions",
  "repository": "https://github.com/risk-and-safety/platform",
  "homepage": "https://riskandsafety.com",
  "license": "UNLICENSED",
  "private": true,
  "config": {
    "deployTypes": [
      "GIT"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "bash ./compile.sh",
    "test": "node jest.setup.js && jest"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "@lerna/project": "5.6.2",
    "@lerna/publish": "5.6.2",
    "@lerna/query-graph": "5.6.2",
    "@lerna/version": "5.6.2",
    "@slack/web-api": "6.7.2",
    "aws-sdk": "2.1238.0",
    "axios": "1.1.3",
    "conventional-changelog-angular": "5.0.13",
    "date-fns": "2.29.3",
    "fs-extra": "10.1.0",
    "js-yaml": "4.1.0",
    "lodash.capitalize": "4.2.1",
    "lodash.kebabcase": "4.1.1",
    "mime-types": "2.1.35",
    "slackify-markdown": "4.3.1",
    "tweetsodium": "0.0.6",
    "uuid": "9.0.0",
    "yargs": "17.6.0"
  },
  "devDependencies": {
    "@vercel/ncc": "0.34.0",
    "cross-env": "7.0.3",
    "esbuild": "0.15.12",
    "eslint": "8.26.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "26.6.0",
    "jest-github-actions-reporter": "1.0.3",
    "jest-sonar-reporter": "2.0.0",
    "prettier": "2.7.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.(spec|integration).js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.transform.js"
    }
  },
  "jestSonar": {
    "reportPath": "coverage/",
    "reportFile": "sonar-reporter.xml"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  }
}
