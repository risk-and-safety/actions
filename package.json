{
  "name": "github-actions",
  "version": "1.5.10-dev.7",
  "description": "Common GitHub Actions",
  "author": "Risk and Safety Solutions",
  "homepage": "https://riskandsafety.com",
  "license": "UNLICENSED",
  "private": true,
  "rss": {
    "deployTypes": [
      "GIT"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "bash ./compile.sh",
    "test": "node jest.setup.js && cross-env AWS_PROFILE=mgmt jest"
  },
  "dependencies": {
    "@actions/core": "1.2.3",
    "@actions/github": "2.1.1",
    "@kubernetes/client-node": "0.11.1",
    "@lerna/project": "3.18.0",
    "@lerna/version": "3.20.2",
    "@rss/common-nodejs": "0.3.60",
    "aws-sdk": "2.638.0",
    "axios": "0.19.2",
    "conventional-changelog-angular": "5.0.6",
    "fs-extra": "8.1.0",
    "mime-types": "2.1.26",
    "multimatch": "4.0.0",
    "uuid": "7.0.2",
    "yargs": "15.3.0"
  },
  "devDependencies": {
    "@zeit/ncc": "0.21.1",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "24.9.0",
    "prettier": "1.19.1"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.(spec|integration).js"
    ]
  }
}
